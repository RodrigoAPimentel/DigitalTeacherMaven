<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/9.0.1"
	fx:controller="org.pimentel.digitalteacher.controller.AdicionaFuncionarioController">
	<top>
		<HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="background-panel"
			stylesheets="@../../CSS/AdicionaFuncionario.css"
			BorderPane.alignment="CENTER_LEFT">
			<children>
				<ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true"
					preserveRatio="true">
					<image>
						<Image url="@../../IMAGENS/ICONES/funcionarioBRANCO.png" />
					</image>
				</ImageView>
				<Label text="Funcionario &gt; Adicionar" textFill="WHITE">
					<font>
						<Font name="Times New Roman Bold" size="24.0" />
					</font>
				</Label>
			</children>
			<padding>
				<Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
			</padding>
		</HBox>
	</top>
	<bottom>
		<HBox alignment="CENTER_RIGHT" spacing="20.0"
			BorderPane.alignment="CENTER_RIGHT">
			<children>
				<JFXButton fx:id="btnSalvar" onMouseClicked="#clickedbtnSalvar"
					styleClass="botao-r" stylesheets="@../../CSS/AdicionaFuncionario.css"
					text="Salvar" />
				<JFXButton fx:id="btnFechar" onMouseClicked="#clickedbtnFechar"
					styleClass="botao-r" stylesheets="@../../CSS/AdicionaFuncionario.css"
					text="Fechar" />
			</children>
			<padding>
				<Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
			</padding>
		</HBox>
	</bottom>
	<center>
		<TabPane prefHeight="200.0" prefWidth="200.0"
			tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
			<tabs>
				<Tab text="Untitled Tab 1">
					<content>
						<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0"
							prefWidth="200.0" />
					</content>
				</Tab>
				<Tab text="Untitled Tab 2">
					<content>
						<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0"
							prefWidth="200.0" />
					</content>
				</Tab>
			</tabs>
		</TabPane>
	</center>
</BorderPane>
